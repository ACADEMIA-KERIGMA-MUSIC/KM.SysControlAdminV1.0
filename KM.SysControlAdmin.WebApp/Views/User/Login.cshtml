@model KM.SysControlAdmin.EN.User___EN.User

@{
    // Titulo De La Pestaña
    ViewData["Title"] = "Inicio De Sesión";
}

<div id="layoutAuthentication" class="bg-primary d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 rounded-lg" style="max-width: 400px; width: 100%;">
        <div class="card-header text-center">
            <br />
            <img src="/assets/img/logos/Logo Kerigma Music.png" width="50%" alt="Logo Oficial" />
            <br />
        </div>
        <div class="card-body">
            <form asp-action="Login">
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" id="inputEmail" type="email" placeholder="usuario@ejemplo.com" required />
                    <label for="inputEmail">Correo Electrónico</label>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" id="inputPassword" type="password" placeholder="Contraseña" required />
                    <label for="inputPassword">Contraseña</label>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <input class="btn btn-primary w-100 py-2 fs-5 mb-3 rounded-2" type="submit" value="Iniciar Sesión" />
                </div>
                <div class="text-center mt-2">
                    <a href="#" class="text-decoration-none">¿Olvidaste Tu Contraseña?</a>
                </div>
                <div class="text-center text-danger mt-3">
                    <span>@ViewBag.Error</span>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Obtiene el año actual y lo inserta en el elemento con id "currentYear"
        document.getElementById("currentYear").textContent = new Date().getFullYear();

        // Funcion De Configuracion De Alert
        function showErrorAlert(message) {
            Swal.fire({
                title: 'Ups!',
                text: message,
                icon: 'error'
            });
        }
        // Mostrar alerta de ViewBag.Error si es necesario
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            @:showErrorAlert('@ViewBag.Error');
        }
    </script>
}